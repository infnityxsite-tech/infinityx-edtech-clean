{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "api/**/*"
  ],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    
    "moduleResolution": "node", // <-- التعديل الأول: غيرنا "bundler" لـ "node"

    "baseUrl": ".",
    
    // "types": [], // <-- التعديل التاني: شيلنا السطر ده خالص عشان يقرأ كل التعريفات

    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}